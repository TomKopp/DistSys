{% extends 'DistSysShopBundle::Scaffolding/scaffolding.html.twig' %}

{% block main %}


<h2 class="heading style1">Produkte Verwalten</h2>
                        <table class="table table-condensed" width="500px" cellpadding="0" cellspacing="0">
                          <thead>
                            <tr>
                              <th>Product</th>
                              {#  <th width="100">Bestellungen</th> #}
