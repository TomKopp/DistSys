<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
		{% stylesheets    
		    '@DistSysShopBundle/Resources/public/css/bootstrap.css'    
		    '@DistSysShopBundle/Resources/public/css/bootstrap-responsive.css' 
		    '@DistSysShopBundle/Resources/public/css/main.css' 
		    filter='yui_css' 
        	output='css/min.css'
        %}
		<link rel="stylesheet" href="{{ asset_url }}" />
		{% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
    </head>
    <body>
	    <div class="navbar navbar-inverse navbar-fixed-top">
	      <div class="navbar-inner">
	        <div class="container">
	          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </button>
	          <a class="brand" href="{{ path('home') }}">DistSys Webshop</a>
	          <div class="nav-collapse collapse">
	            <ul class="nav">
	              <li class="active"><a href="#">Home</a></li>
	              <li><a href="#about">About</a></li>
	              <li><a href="#contact">Contact</a></li>
	              <li class="dropdown">
	                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
	                <ul class="dropdown-menu">
	                  <li><a href="#">Action</a></li>
	                  <li><a href="#">Another action</a></li>
	                  <li><a href="#">Something else here</a></li>
	                  <li class="divider"></li>
	                  <li class="nav-header">Nav header</li>
	                  <li><a href="#">Separated link</a></li>
	                  <li><a href="#">One more separated link</a></li>
	                </ul>
	              </li>
	            </ul>
	            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
	            <ul class="nav pull-right">
	              <li><a href="{{ path('register') }}">register</a></li>
	            </ul>
	            <form   class="navbar-form pull-right" action="{{ path('login_check') }}" method="post">
	              <input class="span2" name="_username" type="text" placeholder="Username">
	              <input class="span2" name="_password" type="password" placeholder="Password">
	              <button type="submit" class="btn">Sign in</button>
	            </form>
	            {% else %}
	            <ul class="nav pull-right">
	              <li><a href="{{ path('logout') }}">logout</a></li>
	            </ul>
	            {% endif %}
	          </div><!--/.nav-collapse -->
	        </div>
	      </div>
	    </div>
    
    
        <div class="container">
          <p>http://getbootstrap.com/2.3.2/getting-started.html#examples</p>
          {% block body %}
          <!-- Main hero unit for a primary marketing message or call to action -->
          <div class="hero-unit">
            <h1>Hello, world!</h1>
          </div>
          {% endblock %}
        </div>
    
        {% javascripts 
            '@DistSysShopBundle/Resources/public/js/jquery.js'  
            '@DistSysShopBundle/Resources/public/js/bootstrap.js'                 
        	filter='yui_js' 
            output='js/min.js'
         %}
         <script src="{{ asset_url }}"></script>
         {% endjavascripts %}
    </body>
</html>
